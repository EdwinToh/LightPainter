package  {		import flash.display.MovieClip;	import com.designfission.effects.*;	import flash.events.MouseEvent;		public class Main extends MovieClip {				public var lightPainter:LightPainter;				public function Main() {			// constructor code						lightPainter = new LightPainter(640,480);			lightPainter.init();						lightPainter.x = 25;			lightPainter.y = 100;						addChild(lightPainter);						start_mc.addEventListener(MouseEvent.CLICK,clickStart);			stop_mc.addEventListener(MouseEvent.CLICK,clickStop);			export_mc.addEventListener(MouseEvent.CLICK,clickExport);					}				private function clickStart(e:MouseEvent):void {			lightPainter.startRecord();					}				private function clickStop(e:MouseEvent):void {			lightPainter.stopRecord();					}				private function clickExport(e:MouseEvent):void {			lightPainter.exportImage();		}	}	}